{
  "name": "NNRGBTPHackathon",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@sap/cds": "^7",
    "express": "^4"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^1",
    "@sap/ux-specification": "^1.120.4"
  },
  "scripts": {
    "start": "cds-serve",
    "watch-business_partner": "cds watch --open business_partner/webapp/index.html?sap-ui-xx-viewCache=false",
    "watch-stock_information": "cds watch --open stock_information/webapp/index.html?sap-ui-xx-viewCache=false",
    "watch-purchase": "cds watch --open purchase/webapp/index.html?sap-ui-xx-viewCache=false",
    "watch-sales": "cds watch --open sales/webapp/index.html?sap-ui-xx-viewCache=false",
    "watch-product": "cds watch --open product/webapp/index.html?sap-ui-xx-viewCache=false"
  },
  "cds": {
    "fiori": {
      "lean_draft": true,
      "bypass_draft": true
    },
    "requires": {
      "db": {
        "kind": "sqlite",
        "credentials": {
          "url": "db.sqlite"
        }
      }
    }
  },
  "sapux": [
    "app/business_partner",
    "app/stock_information",
    "app/purchase",
    "app/purchase",
    "app/sales",
    "app/product"
  ]
}
